# ============================================
# VINYL RECORD APP - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to git!

# ============================================
# Database Configuration
# ============================================
# Development: SQLite (file-based)
DATABASE_URL="file:./prisma/dev.db"

# Production: PostgreSQL (recommended)
# DATABASE_URL="postgresql://user:password@host:port/vinyl_db"
# Vercel Postgres: Available in Vercel dashboard

# ============================================
# NextAuth.js Configuration
# ============================================
# Development
NEXTAUTH_URL=http://localhost:3000

# Production
# NEXTAUTH_URL=https://your-domain.vercel.app

# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-random-secret-key-change-this

# ============================================
# Cloudinary Configuration (Image Storage)
# ============================================
# Sign up free at https://cloudinary.com

# Your Cloudinary account name
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Create unsigned upload preset:
# 1. Settings → Upload
# 2. Add Upload Preset
# 3. Name: "vinyl-collection"
# 4. Mode: Unsigned
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=vinyl-collection

# API credentials (from API Keys section)
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ⚠️  IMPORTANT: API_SECRET must NEVER be exposed in client code
# It's only used on the server for image deletion

# ============================================
# Admin User Credentials
# ============================================
# Used for initial admin account creation
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-in-production
